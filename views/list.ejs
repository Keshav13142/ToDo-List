<%- include("header") %>

    <body>
        <div class="box" id="heading">
            <h1>
                <%= title %>
            </h1>
        </div>
        <div class="box">
            <ul>
                <% for(item of items) { %>
                    <form action="/delete" method="post">
                        <div class="item">
                            <input type="checkbox" onchange="this.form.submit()" name="id" value="<%= item._id %>">
                            <input type="hidden" name="list" value="<%=title%>">
                            <p>
                                <%= item.name %>
                            </p>
                        </div>
                    </form>
                    <% } %>
            </ul>
            <form action="/" method="post">
                <input type="text" name="item" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value="<%= title %>">+</button>
            </form>
        </div>
    </body>

    <%- include("footer") %>